# Backend
# If you set POSTGRES_PORT in docker-compose, update DATABASE_URL to match.
APP_ENV=dev
DATABASE_URL=postgresql+psycopg://tickets:tickets@localhost:5432/tickets_dev
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=change-me
ENCRYPTION_KEY_BASE64=change-me-32-bytes-base64

# Auth / cookies
ALLOW_DEV_LOGIN=false
SESSION_TTL_SECONDS=2592000
SESSION_COOKIE_NAME=oss_session
CSRF_COOKIE_NAME=oss_csrf
CSRF_HEADER_NAME=x-csrf-token
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# CORS
CORS_ORIGINS=http://localhost:3000

# Object storage (S3-compatible, e.g. MinIO)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minio
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=tickets-blobs

# Google OAuth (mailbox connector)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
